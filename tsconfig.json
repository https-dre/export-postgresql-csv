{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "23.0.0",

  "compilerOptions": {
    "lib": ["es2024"],
    "module": "NodeNext",
    "target": "es2024",
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowImportingTsExtensions": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}